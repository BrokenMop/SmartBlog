{{extend 'centertwocols.html'}}
{{for post in posts:}}

<!-- post title -->
<!-- LINK NEED TO COMPLETE -->
<h2><a href="http://all-free-download.com/free-website-templates/">{{=post.title}}</a></h4>

<!-- post info(time, author, tags ...) -->
<!-- LINKS NEED TO COMPLETE -->
<!-- TAGS NEED TO IMPLEMENTED -->
{{if post.if_display_author:}}
<p class="post-info">{{=label_posted_by}} <a href="http://all-free-download.com/free-website-templates/">{{=post.author.username}}</a> |&nbsp;
    {{=getLocalTimeStr(post.post_datetime)}} | {{=label_category}} {{=post.category.category_name}} <br /> {{=label_tags}}&nbsp;
    {{for post_tag_rel in post_tag_rels:}}
        {{if post.id == post_tag_rel.post.id:}}
        <a href="http://all-free-download.com/free-website-templates/">{{=post_tag_rel.tag.tag_name}}</a>&nbsp;
        {{pass}}
    {{pass}}
</p>
{{else:}}
<p class="post-info">{{=getLocalTimeStr(post.post_datetime)}} | {{=label_category}} {{=post.category.category_name}} <br /> {{=label_tags}}&nbsp;
    {{for post_tag_rel in post_tag_rels:}}
        {{if post.id == post_tag_rel.post.id:}}
        <a href="http://all-free-download.com/free-website-templates/">{{=post_tag_rel.tag.tag_name}}</a>&nbsp;
        {{pass}}
    {{pass}}
</p>
{{pass}}

<!-- post body -->
<p>{{=XML(post.body)}}</p>

<!-- post footer(read more, commets) -->
<!-- READ MORE NEED TO IMPLEMENTED -->
<!-- COMMENTS NEED TO IMPLEMENTED -->
<p class="postmeta"> <a href="http://all-free-download.com/free-website-templates/" class="readmore">{{=label_read_more}}</a> | <a href="http://all-free-download.com/free-website-templates/" class="comments">{{=label_comments}} (7)</a></p>
{{pass}}

